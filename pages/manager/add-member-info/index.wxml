<view class="container">
  <view class="input-container">
    <text class="label">姓名</text>
    <input type="text" class="field name-field" bindinput="onUsername" />
  </view>

  <view class="input-container">
    <text class="label">手机号码</text>
    <input
      type="number"
      class="field mobile-field"
      placeholder="11位手机号码"
      placeholder-style="font-size: 32rpx; color: #bbb;"
      bindinput="onMobile"
    />
  </view>

  <view class="input-container">
    <text class="label">会员等级</text>
    <input type="text" class="field privilege-field" bindinput="onPrivilege" />
  </view>

  <button class="button" type="{{ isFormCompleted ? 'primary' : 'default'}}" bindtap="onSubmit">确认</button>
</view>
